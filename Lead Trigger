trigger LeadTrigger on Lead (after insert, after update) {
    if (Trigger.isInsert) {
        if (Trigger.isAfter) {
            LeadTriggerHandler.createTaskAfterInsert(Trigger.new);
        }
    } else if (Trigger.isUpdate) {
        if (Trigger.isAfter) {
            LeadTriggerHandler.createTaskAfterUpdate(Trigger.new, Trigger.oldMap);
        }
    }
}
